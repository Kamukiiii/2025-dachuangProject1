/* pages/login/login.wxss */
.container {
  display: flex;
  justify-content: center;
  /* align-items: center; */
  height: 100vh;
  background-image: url('https://gd-hbimg.huaban.com/6aceb812fd57c2c25bde3d9d435e3b4b332647f65b8b5-klQk1b_fw240webp');
  background-repeat: no-repeat;
  background-size: cover;
}

.form {
  width: 80%;
  max-width: 300px;
}

.input {
  width: 100%;
  padding: 10px;
  margin: 10px 0;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.btn {
  width: 300px;
  padding: 12px;
  background-color: #1AAD19;
  color: white;
  border: none;
  border-radius: 4px;
}

.register-link {
  text-align: center;
  margin-top: 10px;
}

.register-link text {
  color: #1AAD19;
}
/* 头像样式 */
.avatar{
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-bottom: 10px;
}
/* 给输入框添加边框 */
.inp {
  width: 70%;
  padding: 10px;
  margin-top: 25px;
  border: 2px solid rgb(119, 117, 117); /* 设置边框颜色和宽度 */
  border-radius: 4px; /* 设置边框圆角 */
  text-align: center;
}
.logout{
  /* position: fixed;
  bottom: 50px; */
  margin-top: 15px;
  background-color: #1AAD19;
  font-weight: 700;
  color: black;
}
.pop-container{
  
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: black;
  opacity: 0.8;
  
}
.pop-login{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 500rpx;
  display: flex;
  font-size: 20px;
  flex-direction: column;
  align-items: center;
  opacity: 1;
  background-color:white ;
}
.avatarbtn{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  line-height: 200rpx;
  background-color: rgb(214, 120, 120);
  margin-top: 10px;
  padding: 0;
}
.pop-confirm{
  display: flex;
  margin-top: 10px;
}
.pop-yes{
  padding: 5px 15px;
  border-radius: 20%;
  margin-left: 100px;
  background-color: rgb(3, 41, 3);
  color: white;
}
.pop-no{
  padding: 5px 15px;
  border-radius: 20%;
  background-color: rgb(3, 41, 3);
  color: white;
}
.pop-avatar{
  width: 100%;
  height: 100%;
  border-radius: 50%;

}