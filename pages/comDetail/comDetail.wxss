.comdetail{
  background-size: cover;
  background: linear-gradient(135deg, #79AAAD, #c2e9fb);
  text-align: center;
  padding: 10px;
}
.photo{
  width: 300px;
  height: 300px;
  box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
  margin-bottom: 15px;
}
.title{
  font-size: 20px;
  font-weight: 700;
  margin-bottom: 10px;
}
.desc{
  font-size: 17px;
  line-height: 23px;
}
.dianlove{
  transform: translateX(150px);  
  width: 30px;
  height: 30px;
  margin-right: 15px;
}
.submit{
  width: 50px;
  height: 50px;
  transform: translate(160px,-40px);
}

.inp{
  margin-left: 50px;
  border-radius: 20px;
  border: 2px solid grey;
  margin-top: 50px;
  width: 260px;
}
.sharePart{
  width: 100px;
  background-color: green;
  color: white;
  margin-top: 20px;
}
.avatar{
  transform: translate(-200px,94px);
  width: 50px;
  height: 50px;
  border-radius:50%;
}
.comment{
  display: flex;
  width: 100%;
  height: 80px;
  margin-bottom: 10px;

}
.avatar2{
  width: 50px;
  height: 50px;
  border-radius:50%;
  transform: translate(0,12px);
}
.name{
  font-size: 14px;
}
.comment2{
  display: flex;
  flex-direction: column;
  padding-left: 5px;
}
.content{
  padding-top: 7px;
}
