/**index.wxss**/
@font-face{
  font-family: "xingshu";
  src: url("https://7472-travel-2025-program-6ck969f0d7d1-1343052037.tcb.qcloud.la/AiDianGanFengXingShuFanTi-2.ttf?sign=7cd839c13bc700ebcddcf3d8f37eaa53&t=1739943576");
}
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
  background-image: url('https://gd-hbimg.huaban.com/6ddd2d171addc3b9e84bf9114124cf1b1cd202ea19a10-Jag7vj_fw658webp');
  background-size: cover;
  background-repeat: no-repeat;
}
/* 头部 */
.header{
  margin-top: 10px;
  height: 120px;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 10px;
}
.nav{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.text{
  font-size: 13px;
  font-weight: 700;
  margin-top: 10px;
}
.navPic{
  width: 40px; 
  height: 40px;
  overflow: hidden;
}
.navPic image {
  width: 100%; 
  height: 100%;
  border-radius: 50%; 
  object-fit: cover; 
}
/* 设置外框 */
/* 设置文字的对齐 */
.content {
  display: inline-block; 
  border-style:double ;
  padding: 10px 20px; 
  font-family: 'kaiti'; 
  font-size: 24px; 
  text-align: center;
  color: black; 
  margin-bottom: 10px;
  margin-top: 15px;
}
.vr{
  position: fixed;
  right: 10px;
  top: 10px;
  width: 50px;
  height: 50px;
}
.vr image{
  width: 100%;
  height: 100%;
}
.viewpoint{
  width: 100%;
  height: 200px;
  display: flex;
  justify-content: space-between;
  margin-top: 15px;
  margin-bottom: 10px;
}
.viewpoint image{
  width: 100%;
  height: 100%;
  object-fit: cover;
  margin-right: 10px;
  box-shadow: rgba(37, 63, 52, 0.35) 0px 5px 15px;
}

.view-text{
  writing-mode: vertical-rl;
  width: 200px;
  height: 200px;
  line-height: 150px;
  font-size: 40px;
  font-weight: 700;
  font-family: 'xingshu';
}