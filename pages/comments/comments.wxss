/* pages/comments/comments.wxss */

.itemRoot{
  display: flex;
  flex-direction: column;
  text-align: center;
  margin: 10px;
  padding: 5px;
  height: 400px;
  box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;

}
.title{
  font-size: 20px;
  margin-bottom:10px ;
}
.detail{
  max-height: 1.5em;
  overflow: hidden;
}
.itemRoot image{
  width: 100%;
  height: 100%;
}
.addText{
  position: fixed;
  right: 20px;
  bottom: 10px;
  width: 50px;
  height: 50px;
}
.addText image{
  width: 100%;
  height: 100%;
}